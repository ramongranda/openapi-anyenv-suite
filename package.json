{
  "name": "@zoomiit/openapi-anyenv-suite",
  "version": "2.11.0",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "description": "All-in-one OpenAPI toolkit (bundle, lint, grade, report) with Spectral ruleset and grading.",
  "keywords": [
    "openapi",
    "swagger",
    "spectral",
    "redocly",
    "lint",
    "bundle",
    "grade",
    "api"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ramongranda/openapi-anyenv-suite#readme",
  "bugs": {
    "url": "https://github.com/ramongranda/openapi-anyenv-suite/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramongranda/openapi-anyenv-suite.git"
  },
  "scripts": {
    "lint": "spectral lint --ruleset .spectral.yaml --fail-severity error",
    "bundle": "node scripts/bundle.mjs",
    "bundle:npx": "node scripts/bundle-npx.mjs",
    "validate": "node scripts/validate.mjs",
    "validate:npx": "node scripts/validate-npx.mjs",
    "grade": "node scripts/grade.mjs",
    "grade:npx": "node scripts/grade-npx.mjs",
    "report": "node scripts/grade-report.mjs",
    "report:npx": "node scripts/grade-report-npx.mjs",
    "report:serve": "node scripts/serve.mjs --dir dist --port 8080",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "doctor": "node -e \"console.log('Node', process.version)\" && spectral --version && redocly --version"
  },
  "bin": {
    "openapi-validate": "scripts/validate.mjs",
    "openapi-grade": "scripts/grade.mjs",
    "openapi-bundle": "scripts/bundle.mjs",
    "openapi-grade-report": "scripts/grade-report.mjs"
  },
  "files": [
    "scripts",
    "rules",
    "templates",
    "assets",
    ".spectral.yaml",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@redocly/cli": "2.7.0",
    "@stoplight/spectral-cli": "6.15.0",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0"
  }
}
